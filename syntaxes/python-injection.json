{
  "scopeName": "python.injection",
  "injectionSelector": "L:source.docassemble.yaml",
  "patterns": [
    {
			"begin": "^(?:([ ]*)((?:[a-zA-Z]+ )?code)(:)\\s*(\\|))([1-9])?([-+])?(.*\\n?)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.document.leading.yaml"
				},
				"2": {
					"name": "entity.name.tag.yaml"
				},
				"3": {
					"name": "punctuation.separator.key-value.mapping.yaml"
				},
				"4": {
					"name": "keyword.control.flow.block-scalar.literal.yaml"
				},
				"5": {
					"name": "constant.numeric.indentation-indicator.yaml"
				},
				"6": {
					"name": "storage.modifier.chomping-indicator.yaml"
				},
				"7": {
					"patterns": [
						{
							"include": "source.yaml#comment"
						},
						{
							"match": ".+",
							"name": "invalid.illegal.expected-comment-or-newline.yaml"
						}
					]
				}
			},
			"end": "^(?=\\S)|(?!\\G)",
			"patterns": [
				{
					"begin": "^(?=([ ]+)(?! ))",
					"end": "^(?!\\1|\\s*$)",
					"name": "source.python",
					"patterns": [
						{
							"include": "source.python"
						}
					]
				}
			]
		},
    {
      "begin": "^[\\s]*(if|need)(:)\\s(?=.*$)",
      "end": "(?=^\\S)",
      "beginCaptures": {
        "1": { "name": "entity.name.tag.yaml" },
        "2": { "name": "punctuation.separator.key-value.mapping.yaml" }
      },
      "patterns": [
        {
          "match": "^\\s+(-)(?!\\S)",
          "name": "punctuation.definition.block.sequence.item.yaml"
        },
        {
          "include": "source.python"
        }
      ]
    },
    {
      "begin": "^[\\s]*(on change)(:)\\s*$",
      "end": "(?=^\\S)",
      "beginCaptures": {
        "1": { "name": "entity.name.tag.yaml" },
        "2": { "name": "punctuation.separator.key-value.mapping.yaml" }
      },
      "patterns": [
        {
          "begin": "^(?:([ ]*)((?:[a-zA-Z_][a-zA-Z0-9_]*)?)(:)\\s*(\\|))([1-9])?([-+])?(.*\\n?)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.document.leading.yaml"
            },
            "2": {
              "name": "entity.name.tag.yaml"
            },
            "3": {
              "name": "punctuation.separator.key-value.mapping.yaml"
            },
            "4": {
              "name": "keyword.control.flow.block-scalar.literal.yaml"
            },
            "5": {
              "name": "constant.numeric.indentation-indicator.yaml"
            },
            "6": {
              "name": "storage.modifier.chomping-indicator.yaml"
            }
          },
          "end": "^(?=\\S)|(?!\\G)",
          "patterns": [
            {
              "begin": "^(?=([ ]+)(?! ))",
              "end": "^(?!\\1|\\s*$)",
              "name": "source.python",
              "patterns": [
                {
                  "include": "source.python"
                }
              ]
            }
          ]
        },
        {
          "include": "source.yaml"
        }
      ]
    },
    {
      "begin": "^[\\s]*(script)(:)\\s*(?=\\|)\\|?",
      "end": "(?=^\\S)",
      "beginCaptures": {
        "1": { "name": "entity.name.tag.yaml" },
        "2": { "name": "punctuation.separator.key-value.mapping.yaml" }
      },
      "patterns": [
        {
          "begin": "^(?=([ ]+)(?! ))",
          "end": "^(?!\\1|\\s*$)",
          "patterns": [
            {
              "include": "source.js"
            }
          ]
        }
      ]
    },
    {
      "begin": "(?<!#.*)\\.(using)\\(",
      "end": "(\\))",
      "beginCaptures": {
        "1": {
          "name": "meta.function-call.python"
        }
      },
      "patterns": [
        {
          "include": "source.python"
        }
      ]
    }
  ]
}
